<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>cloudbees</id>
    <formats>
        <format>zip</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>simpleweb4j-experiments*</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>

    <files>
        <file>
            <source>target/simpleweb4j-experiments-0.0.1-SNAPSHOT.${packaging}</source>
            <outputDirectory>/</outputDirectory>
            <destName>simpleweb4j-experiments.${packaging}</destName>
        </file>
    </files>
</assembly>